<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.richyhbm.coinbag">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.AboutActivity"
            android:theme="@style/MaterialAboutActivity" />
        <activity
            android:name=".activities.LicensesActivity"
            android:theme="@style/MaterialAboutActivity" />
        <activity
            android:name=".activities.ChangeLogActivity"
            android:theme="@style/MaterialAboutActivity" />
        <activity android:name=".activities.AddAccountActivity" />
        <activity android:name=".activities.EditAccountActivity" />
        <activity android:name=".activities.WalletDetailsActivity"></activity>
    </application>

</manifest>